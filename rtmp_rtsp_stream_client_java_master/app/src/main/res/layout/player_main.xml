<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn10"
            android:text="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fullVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/PlayerLoadingPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/PlayerLoadingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_margin="10dp"
            android:layout_alignLeft="@id/PlayerLoadingText"
            android:layout_alignRight="@id/PlayerLoadingText"/>

        <TextView
            android:id="@+id/PlayerLoadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PlayerLoadingProgress"
            android:gravity="center_horizontal"
            android:text="방송 플레이어를 준비중입니다\n 잠시만 기다려주세요"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

</FrameLayout>